<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/track_event_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/track_event"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/crash_the_app_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/crash_the_app"
        app:layout_constraintBottom_toTopOf="@id/track_event_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/track_error_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/track_error"
        app:layout_constraintTop_toBottomOf="@id/track_event_button"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>